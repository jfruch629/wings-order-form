<%= form_for(@wing_order) do |f| %>

  <div class="field">
    <%= f.label :customer_name %>
    <%= f.text_field :customer_name %>
  </div>
  <br />

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <br />

  <div class="field">
    <%= f.label :state %>
    <%= f.select(:state, options_for_select([ 
      [(WingOrder::STATES[0][1]), (WingOrder::STATES[0][1])],
      [WingOrder::STATES[1][1], WingOrder::STATES[1][1]],
      [WingOrder::STATES[2][1], WingOrder::STATES[2][1]],
      [WingOrder::STATES[3][1], WingOrder::STATES[3][1]]
    ])) %>
  </div>
  <br />

  <div class ="field">
    <%= f.label 'Quantity' %>
    <% WingOrder::QUANTITIES.each do |quantity| %>
    <%= f.radio_button :quantity, quantity[0] %>
    <%= f.label quantity[1] %>
    <% end %>
  </div>
  <br />

  <div class ="field">
    <%= f.label 'Add Ranch Dressing' %>
    <%= f.check_box :ranch_dressing %>
  </div>
  <br />

  <div class="field">
    <%= f.label 'Add Flavors' %>
    <% Flavor.all.each do |flavor| %>
    <%= f.check_box :flavor_ids, { multiple: true }, flavor.id %>
    <%= f.label flavor.name %>
    <% end %>
  </div>
  <br />

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
